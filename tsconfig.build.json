{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": false,
        "removeComments": true
    },
    "include": [
        "src/**/*",
        "bin/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "examples",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}